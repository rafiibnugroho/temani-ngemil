{
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "cmds": ["composer install --no-dev --optimize-autoloader"]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "php artisan config:cache && php artisan route:cache && php artisan serve --host=0.0.0.0 --port=8000"
    }
}
